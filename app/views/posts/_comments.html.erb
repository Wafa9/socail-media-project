<ul class="collection">
  <li class="collection-item avatar">
    <% if post.user.image.url %>
      <i class="material-icons circle indigo lighten-3"><%= cl_image_tag post.user.image %></i>
    <% else %>
      <i class="material-icons circle indigo lighten-3">person</i>
    <% end %>
    <span class="title">
      <%= post.user.username %>
    </span>
    <p class="grey-text">
      <%= post.body %>
    </p>
    <%= cl_image_tag post.image%>
  </li>
  <% post.comments.each do |comment| %>
    <li class="collection-item avatar">
      <% if post.user.image.url %>
        <i class="material-icons circle indigo lighten-3"><%= cl_image_tag post.user.image %></i>
      <% else %>
        <i class="material-icons circle indigo lighten-3">person</i>
      <% end %>
      <%= link_to comment.body , comment_path(comment) %>
    </li>
  <% end %>
</ul>
